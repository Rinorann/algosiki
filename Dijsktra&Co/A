def read_list(n,m):
    adj_list = [[] for _ in range(n)]
    for _ in range(m):
        s, f, w = map(int, input().split())
        adj_list[s].append((f,w))
        adj_list[f].append((s, w))
    return adj_list

def dijsktra(adj_list, start_node):
    dist = {i:float('inf') for i in range(len(adj_list))}
    dist[start_node] = 0
    res = {}
    while dist:
        min_dist = min(dist.values())
        min_node = 0
        for key in dist:
            if dist[key] == min_dist:
                min_node = key
                break
        res[min_node] = min_dist
        dist.pop(min_node)
        for adj_node, weight in adj_list[min_node]:
            if dist[adj_node] in dist:
                if dist[adj_node] > min_dist + weight:
                    dist[adj_node] = min_dist + weight
    return res
n, m, s, f = map(int, input().split())
adj_list = read_list(n ,m)
print(dijsktra(adj_list, s))